{
  "name": "explorer-dates",
  "displayName": "Explorer Dates",
  "description": "See file modification dates right in VS Code Explorer with intuitive time badges",
  "publisher": "incredincomp",
  "license": "SEE LICENSE IN LICENSE",
  "version": "1.3.0",
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "file dates",
    "explorer decorations",
    "last modified",
    "file info",
    "explorer enhancement"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "browser": "./dist/extension.web.js",
  "contributes": {
    "commands": [
      {
        "command": "explorerDates.refreshDateDecorations",
        "title": "Refresh Date Decorations",
        "category": "Explorer Dates"
      },
      {
        "command": "explorerDates.showMetrics",
        "title": "Show Performance Metrics",
        "category": "Explorer Dates"
      },
      {
        "command": "explorerDates.openLogs",
        "title": "Open Logs",
        "category": "Explorer Dates"
      },
      {
        "command": "explorerDates.showCurrentConfig",
        "title": "Show Current Configuration",
        "category": "Explorer Dates"
      },
      {
        "command": "explorerDates.resetToDefaults",
        "title": "Reset to Default Settings",
        "category": "Explorer Dates"
      },
      {
        "command": "explorerDates.applyCustomColors",
        "title": "Apply Custom Colors",
        "category": "Explorer Dates"
      },
      {
        "command": "explorerDates.migrateSettings",
        "title": "Migrate Settings",
        "category": "Explorer Dates"
      },
      {
        "command": "explorerDates.validateConfiguration",
        "title": "Validate Configuration",
        "category": "Explorer Dates"
      },
      {
        "command": "explorerDates.cleanLegacySettings",
        "title": "Clean Legacy Settings",
        "category": "Explorer Dates"
      },
      {
        "command": "explorerDates.showMigrationHistory",
        "title": "Show Migration History",
        "category": "Explorer Dates"
      },
      {
        "command": "explorerDates.exportConfiguration",
        "title": "Export Configuration",
        "category": "Explorer Dates"
      },
      {
        "command": "explorerDates.toggleDecorations",
        "title": "Toggle Date Decorations",
        "category": "Explorer Dates"
      },
      {
        "command": "explorerDates.copyFileDate",
        "title": "Copy File Date",
        "category": "Explorer Dates"
      },
      {
        "command": "explorerDates.showFileDetails",
        "title": "Show File Details",
        "category": "Explorer Dates"
      },
      {
        "command": "explorerDates.toggleFadeOldFiles",
        "title": "Toggle Fade Old Files",
        "category": "Explorer Dates"
      },
      {
        "command": "explorerDates.showFileHistory",
        "title": "Show File History",
        "category": "Explorer Dates"
      },
      {
        "command": "explorerDates.compareWithPrevious",
        "title": "Compare with Previous Version",
        "category": "Explorer Dates"
      },
      {
        "command": "explorerDates.showWorkspaceActivity",
        "title": "Show Workspace File Activity",
        "category": "Explorer Dates"
      },
      {
        "command": "explorerDates.showPerformanceAnalytics",
        "title": "Show Performance Analytics",
        "category": "Explorer Dates"
      },
      {
        "command": "explorerDates.showKeyboardShortcuts",
        "title": "Show Keyboard Shortcuts",
        "category": "Explorer Dates"
      },
      {
        "command": "explorerDates.showFeatureTour",
        "title": "Show Feature Tour",
        "category": "Explorer Dates"
      },
      {
        "command": "explorerDates.showQuickSetup",
        "title": "Show Quick Setup Wizard",
        "category": "Explorer Dates"
      },
      {
        "command": "explorerDates.showWhatsNew",
        "title": "What's New in Explorer Dates",
        "category": "Explorer Dates"
      },
      {
        "command": "explorerDates.openTemplateManager",
        "title": "Open Template Manager",
        "category": "Explorer Dates"
      },
      {
        "command": "explorerDates.saveTemplate",
        "title": "Save Current Configuration as Template",
        "category": "Explorer Dates"
      },
      {
        "command": "explorerDates.generateReport",
        "title": "Generate File Modification Report",
        "category": "Explorer Dates"
      },
      {
        "command": "explorerDates.showApiInfo",
        "title": "Show Extension API Information",
        "category": "Explorer Dates"
      },
      {
        "command": "explorerDates.debugCache",
        "title": "Debug Cache Performance",
        "category": "Explorer Dates"
      },
      {
        "command": "explorerDates.runDiagnostics",
        "title": "Run Diagnostics (Fix Missing Decorations)",
        "category": "Explorer Dates"
      },
      {
        "command": "explorerDates.quickFix",
        "title": "Quick Fix Common Issues",
        "category": "Explorer Dates"
      },
      {
        "command": "explorerDates.testDecorations",
        "title": "Test Decoration Provider",
        "category": "Explorer Dates"
      },
      {
        "command": "explorerDates.monitorDecorations",
        "title": "Monitor VS Code Decoration Requests",
        "category": "Explorer Dates"
      },
      {
        "command": "explorerDates.testVSCodeRendering",
        "title": "Test VS Code Decoration Rendering",
        "category": "Explorer Dates"
      },
      {
        "command": "explorerDates.previewConfiguration",
        "title": "Preview Configuration (Internal)",
        "category": "Explorer Dates"
      },
      {
        "command": "explorerDates.clearPreview",
        "title": "Clear Configuration Preview (Internal)",
        "category": "Explorer Dates"
      },
      {
        "command": "explorerDates.applyPreset",
        "title": "Apply Configuration Preset",
        "category": "Explorer Dates"
      },
      {
        "command": "explorerDates.restorePreviousPreset",
        "title": "Restore Previous Preset",
        "category": "Explorer Dates"
      },
      {
        "command": "explorerDates.configureRuntime",
        "title": "Configure Runtime Chunks",
        "category": "Explorer Dates"
      },
      {
        "command": "explorerDates.suggestOptimalPreset",
        "title": "Suggest Optimal Configuration",
        "category": "Explorer Dates"
      },
      {
        "command": "explorerDates.showChunkStatus",
        "title": "Show Chunk Status",
        "category": "Explorer Dates"
      },
      {
        "command": "explorerDates.optimizeBundle",
        "title": "Optimize Bundle Size",
        "category": "Explorer Dates"
      },
      {
        "command": "explorerDates.organizeSettings",
        "title": "Organize Explorer Dates Settings",
        "category": "Explorer Dates"
      },
      {
        "command": "explorerDates.validateTeamConfig",
        "title": "Validate Team Configuration",
        "category": "Explorer Dates"
      }
    ],
    "keybindings": [
      {
        "command": "explorerDates.toggleDecorations",
        "key": "ctrl+shift+d",
        "mac": "cmd+shift+d",
        "when": "explorerViewletVisible"
      },
      {
        "command": "explorerDates.copyFileDate",
        "key": "ctrl+shift+c",
        "mac": "cmd+shift+c",
        "when": "explorerViewletFocus && !explorerResourceIsFolder"
      },
      {
        "command": "explorerDates.showFileDetails",
        "key": "ctrl+shift+i",
        "mac": "cmd+shift+i",
        "when": "explorerViewletFocus && !explorerResourceIsFolder"
      },
      {
        "command": "explorerDates.refreshDateDecorations",
        "key": "ctrl+shift+r",
        "mac": "cmd+shift+r",
        "when": "explorerViewletVisible"
      },
      {
        "command": "explorerDates.showWorkspaceActivity",
        "key": "ctrl+shift+a",
        "mac": "cmd+shift+a",
        "when": "workspaceFolderCount > 0"
      },
      {
        "command": "explorerDates.toggleFadeOldFiles",
        "key": "ctrl+shift+f",
        "mac": "cmd+shift+f",
        "when": "explorerViewletVisible"
      },
      {
        "command": "explorerDates.openTemplateManager",
        "key": "ctrl+shift+t",
        "mac": "cmd+shift+t",
        "when": "workspaceFolderCount > 0"
      },
      {
        "command": "explorerDates.generateReport",
        "key": "ctrl+shift+e",
        "mac": "cmd+shift+e",
        "when": "workspaceFolderCount > 0"
      },
      {
        "command": "explorerDates.debugCache",
        "key": "ctrl+shift+m",
        "mac": "cmd+shift+m",
        "when": "explorerViewletVisible"
      },
      {
        "command": "explorerDates.runDiagnostics",
        "key": "ctrl+shift+h",
        "mac": "cmd+shift+h",
        "when": "explorerViewletVisible"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "explorerDates.copyFileDate",
          "when": "!explorerResourceIsFolder && config.explorerDates.enableContextMenu",
          "group": "7_modification@1"
        },
        {
          "command": "explorerDates.showFileDetails",
          "when": "!explorerResourceIsFolder && config.explorerDates.enableContextMenu",
          "group": "7_modification@2"
        },
        {
          "command": "explorerDates.showFileHistory",
          "when": "!explorerResourceIsFolder && config.explorerDates.enableContextMenu && explorerDates.gitFeaturesAvailable",
          "group": "7_modification@3"
        },
        {
          "command": "explorerDates.compareWithPrevious",
          "when": "!explorerResourceIsFolder && config.explorerDates.enableContextMenu && explorerDates.gitFeaturesAvailable",
          "group": "7_modification@4"
        }
      ],
      "commandPalette": [
        {
          "command": "explorerDates.showWorkspaceActivity",
          "when": "workspaceFolderCount > 0 && config.explorerDates.enableAnalysisCommands"
        },
        {
          "command": "explorerDates.showPerformanceAnalytics",
          "when": "workspaceFolderCount > 0 && config.explorerDates.enableAnalysisCommands"
        },
        {
          "command": "explorerDates.debugCache",
          "when": "config.explorerDates.enableAnalysisCommands"
        },
        {
          "command": "explorerDates.copyFileDate",
          "when": "false"
        },
        {
          "command": "explorerDates.showFileHistory",
          "when": "false"
        },
        {
          "command": "explorerDates.compareWithPrevious",
          "when": "false"
        },
        {
          "command": "explorerDates.previewConfiguration",
          "when": "false"
        },
        {
          "command": "explorerDates.clearPreview",
          "when": "false"
        }
      ]
    },
    "colors": [
      {
        "id": "explorerDates.customColor.veryRecent",
        "description": "Custom color for files modified within 1 hour",
        "defaults": {
          "dark": "#00ff00",
          "light": "#00aa00",
          "highContrast": "#00ff00"
        }
      },
      {
        "id": "explorerDates.customColor.recent",
        "description": "Custom color for files modified within 1 day",
        "defaults": {
          "dark": "#ffff00",
          "light": "#cc9900",
          "highContrast": "#ffff00"
        }
      },
      {
        "id": "explorerDates.customColor.old",
        "description": "Custom color for files modified more than 1 day ago",
        "defaults": {
          "dark": "#ff0000",
          "light": "#cc0000",
          "highContrast": "#ff0000"
        }
      }
    ],
    "configuration": {
      "title": "Explorer Dates",
      "properties": {
        "explorerDates.performanceMode": {
          "type": "boolean",
          "default": false,
          "description": "Enable minimal performance mode: disables all features except basic date/time tooltips on files (no Git info, no auto-updates, no status bar, no progressive loading). Recommended for large projects or low-resource systems.",
          "scope": "window"
        },
        "explorerDates.forceEnableForLargeWorkspaces": {
          "type": "boolean",
          "default": false,
          "description": "Suppress the automatic large workspace warning (250,000+ files). Set to true to keep current settings without being prompted to enable performance mode.",
          "scope": "window"
        },
        "explorerDates.featureLevel": {
          "type": "string",
          "enum": [
            "auto",
            "full",
            "enhanced",
            "standard",
            "minimal"
          ],
          "default": "auto",
          "description": "Choose how aggressively Explorer Dates optimizes itself. Auto adapts to workspace size; Full keeps every feature enabled, Enhanced/Standard progressively disable costly features, Minimal keeps tooltips lightweight without forcing performanceMode.",
          "scope": "window"
        },
        "explorerDates.smartFileWatching": {
          "type": "boolean",
          "default": true,
          "description": "Use adaptive file watching that focuses on code folders and currently open files. Disable to fall back to VS Code's global watcher.",
          "scope": "window"
        },
        "explorerDates.smartWatcherMaxPatterns": {
          "type": "number",
          "default": 20,
          "minimum": 5,
          "maximum": 200,
          "description": "Maximum number of base watcher patterns to register per workspace. Lower values reduce overhead in extremely large repositories.",
          "scope": "window"
        },
        "explorerDates.smartWatcherExtensions": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "mjs",
            "cjs",
            "mts",
            "cts",
            "vue",
            "py",
            "go",
            "rb",
            "rs",
            "java",
            "kt",
            "swift",
            "cs",
            "cpp",
            "c",
            "php",
            "scala",
            "sql",
            "md",
            "mdx",
            "json",
            "jsonc",
            "yml",
            "yaml",
            "toml",
            "ini",
            "txt",
            "html",
            "css",
            "scss"
          ],
          "description": "File extensions that smart file watching prioritizes (omit the leading dot).",
          "scope": "window"
        },
        "explorerDates.security.enforceWorkspaceBoundaries": {
          "type": "boolean",
          "default": true,
          "description": "Block Explorer Dates from touching files outside the currently opened workspace folders. Disable only for controlled migrations or external automation that already sandboxes file access.",
          "scope": "window"
        },
        "explorerDates.security.enableBoundaryEnforcement": {
          "type": "boolean",
          "default": true,
          "description": "Preferred flag for workspace boundary enforcement. When left at the default value, Explorer Dates enforces boundaries in production and relaxes them automatically in test/dev environments.",
          "scope": "window"
        },
        "explorerDates.security.allowedExtraPaths": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "Absolute paths that should be treated as trusted workspace roots (e.g., shared fixture folders, migration temp directories). Entries support OS-specific path syntax and are normalized at runtime.",
          "scope": "window"
        },
        "explorerDates.security.allowTestPaths": {
          "type": "boolean",
          "default": true,
          "description": "Automatically relax workspace boundary enforcement in test environments (EXPLORER_DATES_TEST_MODE=1 or NODE_ENV=test) so harnesses can create temp files outside the workspace.",
          "scope": "window"
        },
        "explorerDates.security.logThrottleWindowMs": {
          "type": "number",
          "default": 5000,
          "minimum": 0,
          "description": "Minimum time window (in milliseconds) before Explorer Dates logs repeated security warnings for the same file. Increase this value to suppress noisy, repeated entries.",
          "scope": "window"
        },
        "explorerDates.security.maxWarningsPerFile": {
          "type": "number",
          "default": 1,
          "minimum": 0,
          "description": "Maximum number of security warnings Explorer Dates will log per file/path per session. Set to 0 for unlimited warnings, or raise the limit for verbose auditing.",
          "scope": "window"
        },
        "explorerDates.enableSmartWatcherFallbacks": {
          "type": [
            "boolean",
            "string"
          ],
          "enum": [
            true,
            false,
            "auto"
          ],
          "default": "auto",
          "description": "Enable fallback file watching for platforms with unreliable native watchers. 'auto' enables fallbacks only on problematic platforms (WSL, Docker, remote), 'true' always enables, 'false' disables fallbacks.",
          "enumDescriptions": [
            "Always enable fallback watchers (may impact performance)",
            "Never use fallback watchers (may miss file changes on some platforms)",
            "Auto-detect problematic platforms and enable fallbacks only when needed (recommended)"
          ],
          "scope": "window"
        },
        "explorerDates.showDateDecorations": {
          "type": "boolean",
          "default": true,
          "description": "Show last modified dates as decorations in the Explorer",
          "scope": "window"
        },
        "explorerDates.dateDecorationFormat": {
          "type": "string",
          "enum": [
            "smart",
            "relative-short",
            "relative-long",
            "absolute-short",
            "absolute-long"
          ],
          "default": "smart",
          "description": "Format for date decorations in Explorer",
          "enumDescriptions": [
            "Smart format: relative for recent (5m, 2h), absolute for older (truncated to 2 chars)",
            "Always relative with 2-char format (5m, 2h, 3d, 1w)",
            "Always relative - Note: truncated to 2 chars due to VS Code limits",
            "Always absolute - Note: truncated to 2 chars (Oc, Se, etc.)",
            "Always absolute with year - Note: truncated to 2 chars due to VS Code limits"
          ],
          "scope": "window"
        },
        "explorerDates.excludedFolders": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "node_modules",
            ".git",
            "dist",
            "build",
            "out",
            ".vscode-test"
          ],
          "description": "Folders to exclude from date decorations for better performance",
          "scope": "window"
        },
        "explorerDates.excludedPatterns": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "**/*.tmp",
            "**/*.log",
            "**/.git/**",
            "**/node_modules/**"
          ],
          "description": "File patterns (glob) to exclude from date decorations",
          "scope": "window"
        },
        "explorerDates.enableLogging": {
          "type": "boolean",
          "default": false,
          "description": "Enable detailed logging for debugging purposes",
          "scope": "window"
        },
        "explorerDates.locale": {
          "type": "string",
          "enum": [
            "en",
            "es",
            "fr",
            "de",
            "ja",
            "zh",
            "auto"
          ],
          "default": "auto",
          "description": "Language for date formatting (auto uses VS Code's display language)",
          "enumDescriptions": [
            "English",
            "Spanish",
            "French",
            "German",
            "Japanese",
            "Chinese",
            "Automatically detect from VS Code"
          ],
          "scope": "window"
        },
        "explorerDates.highContrastMode": {
          "type": "boolean",
          "default": false,
          "description": "Enable high-contrast styling for decorations",
          "scope": "window"
        },
        "explorerDates.cacheTimeout": {
          "type": "number",
          "default": 30000,
          "minimum": 5000,
          "maximum": 300000,
          "description": "Cache timeout in milliseconds (5000-300000)",
          "scope": "window"
        },
        "explorerDates.badgeRefreshInterval": {
          "type": "number",
          "default": 60000,
          "minimum": 10000,
          "maximum": 600000,
          "description": "Interval in milliseconds to refresh time-based badges (10000-600000). Lower values keep badges more current but may impact performance.",
          "scope": "window"
        },
        "explorerDates.maxCacheSize": {
          "type": "number",
          "default": 10000,
          "minimum": 100,
          "maximum": 50000,
          "description": "Maximum number of cached file decorations",
          "scope": "window"
        },
        "explorerDates.decorationPoolSize": {
          "type": "number",
          "default": 2048,
          "minimum": 128,
          "maximum": 8192,
          "description": "Maximum number of decoration instances to keep pooled for reuse. Higher values reduce allocations in large workspaces at the cost of a small, fixed memory footprint.",
          "scope": "window"
        },
        "explorerDates.flyweightCacheSize": {
          "type": "number",
          "default": 4096,
          "minimum": 512,
          "maximum": 16384,
          "description": "Maximum number of flyweight badge/readable strings to cache. Larger values reduce string churn in workspaces with diverse timestamp ranges.",
          "scope": "window"
        },
        "explorerDates.colorScheme": {
          "type": "string",
          "enum": [
            "none",
            "recency",
            "file-type",
            "subtle",
            "vibrant",
            "custom"
          ],
          "default": "none",
          "description": "Color scheme for date decorations",
          "enumDescriptions": [
            "No color coding",
            "Color by file age (green: recent, yellow: medium, red: old)",
            "Color by file type (different colors for different extensions)",
            "Subtle color variations",
            "Vibrant colors for better visibility",
            "Use custom color configuration"
          ],
          "scope": "window"
        },
        "explorerDates.customColors": {
          "type": "object",
          "default": {
            "veryRecent": "#00ff00",
            "recent": "#ffff00",
            "old": "#ff0000"
          },
          "markdownDescription": "**DEPRECATED:** This setting is deprecated. Use `workbench.colorCustomizations` instead to define custom colors for the 'custom' color scheme. Run the `Explorer Dates: Apply Custom Colors` command to set up custom colors properly. [Learn more](https://code.visualstudio.com/api/references/theme-color)",
          "deprecationMessage": "This setting is deprecated. Use 'workbench.colorCustomizations' with the color IDs 'explorerDates.customColor.veryRecent', 'explorerDates.customColor.recent', and 'explorerDates.customColor.old' instead.",
          "properties": {
            "veryRecent": {
              "type": "string",
              "default": "#00ff00",
              "description": "Color for files modified within 1 hour"
            },
            "recent": {
              "type": "string",
              "default": "#ffff00",
              "description": "Color for files modified within 1 day"
            },
            "old": {
              "type": "string",
              "default": "#ff0000",
              "description": "Color for files modified more than 1 day ago"
            }
          },
          "scope": "window"
        },
        "explorerDates.fadeOldFiles": {
          "type": "boolean",
          "default": false,
          "description": "Fade decorations for files older than specified threshold",
          "scope": "window"
        },
        "explorerDates.fadeThreshold": {
          "type": "number",
          "default": 30,
          "minimum": 1,
          "maximum": 365,
          "description": "Days after which to fade file decorations (when fadeOldFiles is enabled)",
          "scope": "window"
        },
        "explorerDates.showFileSize": {
          "type": "boolean",
          "default": false,
          "description": "Show file size alongside modification date (e.g., '5m|~1K')",
          "scope": "window"
        },
        "explorerDates.fileSizeFormat": {
          "type": "string",
          "enum": [
            "auto",
            "bytes",
            "kb",
            "mb"
          ],
          "default": "auto",
          "description": "Format for file size display (auto = smart formatting)",
          "enumDescriptions": [
            "Automatically choose best format (~1K, ~3M)",
            "Always show in bytes (~1234B)",
            "Always show in kilobytes (~1.2K)",
            "Always show in megabytes (~1.2M)"
          ],
          "scope": "window"
        },
        "explorerDates.enableContextMenu": {
          "type": "boolean",
          "default": true,
          "description": "Add Explorer Dates options to file context menu",
          "scope": "window"
        },
        "explorerDates.showGitInfo": {
          "type": "string",
          "enum": [
            "none",
            "author",
            "both"
          ],
          "default": "none",
          "description": "Show Git information alongside dates",
          "markdownDescription": "Show Git information alongside dates. *(Disabled automatically on VS Code for Web)*",
          "enumDescriptions": [
            "No Git information",
            "Show last commit author initials (e.g., '5mâ€¢JD')",
            "Show both modification time and commit info"
          ],
          "scope": "window"
        },
        "explorerDates.badgePriority": {
          "type": "string",
          "enum": [
            "time",
            "author",
            "size"
          ],
          "default": "time",
          "description": "Which information should occupy the short (2-char) badge: time, author initials, or size",
          "enumDescriptions": [
            "Show time-based badge (default)",
            "Show author initials when available",
            "Show a compact size indicator when file size display is enabled"
          ],
          "scope": "window"
        },
        "explorerDates.showStatusBar": {
          "type": "boolean",
          "default": false,
          "description": "Show file modification info in status bar for selected files",
          "scope": "window"
        },
